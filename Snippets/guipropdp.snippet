<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Dependency property</Title>
			<Shortcut>guipropdp</Shortcut>
			<Description>Code snippet for a dependency property</Description>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>type</ID>
					<ToolTip>Property type</ToolTip>
					<Default>int</Default>
				</Literal>
				<Literal>
					<ID>property</ID>
					<ToolTip>Property name</ToolTip>
					<Default>MyProperty</Default>
				</Literal>
				<Literal>
					<ID>class</ID>
					<ToolTip>Class name</ToolTip>
					<Default>ClassName</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp"><![CDATA[public $type$ $property$
			{
			    get => ($type$)GetValue($property$Property);
			    set => SetValue($property$Property, value);
			}
			public static readonly DependencyProperty $property$Property = DependencyProperty.Register(nameof($property$), typeof($type$), typeof($class$),
			     new FrameworkPropertyMetadata(default($type$), FrameworkPropertyMetadataOptions.BindsTwoWayByDefault));$end$]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
